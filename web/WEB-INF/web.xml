<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>AccessControlFilter</filter-name>
        <filter-class>com.baturu.oss.security.AccessControlFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PathTranslateFilter</filter-name>
        <filter-class>org.sitevelocity.web.filters.PathTranslateFilter</filter-class>
    </filter>
    <!--servlet>
        <servlet-name>sitemesh-velocity</servlet-name>
        <servlet-class>com.opensymphony.module.sitemesh.velocity.VelocityDecoratorServlet</servlet-class>
        <load-on-startup>10</load-on-startup>
    </servlet-->
    <filter-mapping>
        <filter-name>PathTranslateFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AccessControlFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>ViewControllerServlet</servlet-name>
        <servlet-class>org.sitevelocity.web.servlets.ViewControllerServlet</servlet-class>
    </servlet>
    <!--servlet-mapping>
        <servlet-name>sitemesh-velocity</servlet-name>
        <url-pattern>*.vm</url-pattern>
    </servlet-mapping-->
    <servlet>
        <servlet-name>ActionControllerServlet</servlet-name>
        <servlet-class>org.sitevelocity.web.servlets.ActionControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewControllerServlet</servlet-name>
        <url-pattern>*.vm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionControllerServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.vm</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>org.apache.velocity.exception.ParseErrorException</exception-type>
        <location>/error.vm</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error.vm</location>
    </error-page>
    <error-page>
        <exception-type>org.apache.velocity.exception.ResourceNotFoundException</exception-type>
        <location>/error.vm</location>
    </error-page>
</web-app>
